doctype html
html
  head
    title Car License Plate
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
    style.
      body,html{
      height: 100%;
      }
      .jumbotron{
      height:100%;
      }
  body
    .jumbotron
      .container
        .row
          .col-sm-12.d-flex.justify-content-center
            #checkValid.text-danger.font-weight-bold(style='visibility: hidden;') Invalid Format!
        .row
          .col-sm-2
          .col-sm-8.d-flex.justify-content-center
            .row
              .col-sm-3
                .form-group
                  label(for='number') Car Number:
                  input#initial.form-control(type='text', placeholder='1A')
              .col-sm-3
                .form-group
                  label(for='number') Car Number:
                  input#number.form-control(type='text', placeholder='9999')
              .col-sm-3
                .form-group
                  label(for='date') Date:
                  input#date.form-control(type='date')
              .col-sm-3
                .form-group
                  label(style='visibility:hidden;') Example Text
                  button.form-control.btn.btn-secondary(onclick='onClickMethod()', type='button') Find
          .col-sm-2
      .container-fluid
        .d-flex.justify-content-center
          table.table.table-hover.table-striped
            thead.table-success
              tr
                th #
                th Car Number
                th Time
                th Date
            tbody#tableBody
    script.
      function onClickMethod(){
      var tableBody = document.getElementById("tableBody");
      while (tableBody.firstChild) {
      tableBody.removeChild(tableBody.firstChild);
      }
      var carInitial = document.getElementById("initial").value.toUpperCase();
      var regexInitial = RegExp('^[A-Z]|[1-9][A-Z]$');
      var validInitial = carInitial.length == 2 && regexInitial.test(carInitial);
      var carNumber = document.getElementById("number").value;
      var regexNumber = RegExp('^[0-9][0-9][0-9][0-9]');
      var validNumber = regexNumber.test(carNumber) && carNumber.length == 4;
      var calendar = document.getElementById("date").value;
      var chooseDate = calendar != "";
      var okay = validInitial && validNumber && chooseDate;

      var validText = document.getElementById("checkValid");
      if (carInitial == "" && carNumber == ""){
      var date = new Date(calendar);
      var day = date.getDate();
      var month = date.getMonth()+1;
      var year = date.getFullYear();
      validText.style.visibility = "hidden";
      var xhr = new XMLHttpRequest();
      var url = "/getbydate?day="+day+"&month="+month+
      "&year="+year;
      xhr.open("GET",url, true);
      xhr.onload = function (e) {
      if (xhr.readyState === 4) {
      if (xhr.status === 200) {
      var json = JSON.parse(xhr.responseText);
      createTable(tableBody,json);

      } else {
      console.error(xhr.statusText);
      }
      }
      };
      xhr.onerror = function (e) {
      console.error(xhr.statusText);
      };
      xhr.send(null);
      }else if (okay) {
      var date = new Date(calendar);
      var day = date.getDate();
      var month = date.getMonth()+1;
      var year = date.getFullYear();
      validText.style.visibility = "hidden";
      var xhr = new XMLHttpRequest();
      var url = "/getdata?initial="+carInitial+"&number="+carNumber+"&day="+day+"&month="+month+
      "&year="+year;
      xhr.open("GET",url, true);
      xhr.onload = function (e) {
      if (xhr.readyState === 4) {
      if (xhr.status === 200) {
      var json = JSON.parse(xhr.responseText);
      createTable(tableBody,json);
      } else {
      console.error(xhr.statusText);
      }
      }
      };
      xhr.onerror = function (e) {
      console.error(xhr.statusText);
      };
      xhr.send(null);
      } else {
      validText.style.visibility = "visible";
      }
      }
      function createTable(tableBody,json){
      for (var i = 0 ; i < json.length ; i++){
      var row = document.createElement("tr");
      var number = i+1;
      number = number.toString();
      var td1 = document.createElement("td");
      td1.innerHTML = number;
      var td2 = document.createElement("td");
      td2.innerHTML = json[i].initial+"/"+json[i].number;
      var td3 = document.createElement("td");
      td3.innerHTML = json[i].hour+":"+json[i].minute;
      var td4 = document.createElement("td");
      td4.innerHTML = json[i].day +"."+json[i].month+"."+json[i].year;
      row.appendChild(td1);
      row.appendChild(td2);
      row.appendChild(td3);
      row.appendChild(td4);
      tableBody.appendChild(row);
      }
      }
